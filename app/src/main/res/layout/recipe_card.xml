<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/recipe_card_view"
        android:layout_marginLeft="@dimen/recipe_card_margin_lr"
        android:layout_marginRight="@dimen/recipe_card_margin_lr"
        android:layout_marginTop="@dimen/recipe_card_margin_tb"
        android:layout_marginBottom="@dimen/recipe_card_margin_tb"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recipe_card_height"
        card_view:cardCornerRadius="@dimen/recipe_card_corner_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/recipe_card_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/recipe_card_text_size" />

            <ImageView
                android:id="@+id/recipe_card_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/recipe_card_thumbnail_margin"
                android:visibility="gone"
                android:contentDescription="@string/thumbnail_content_description"

                android:padding="@dimen/recipe_card_thumbnail_border_padding"
                android:scaleType="centerCrop"
                android:cropToPadding="true"
                android:background="@drawable/image_border"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>