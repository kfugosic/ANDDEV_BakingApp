<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kfugosic.bakingapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.kfugosic.bakingapp.RecipeDetailsActivity"
            android:parentActivityName="com.kfugosic.bakingapp.MainActivity">
        </activity>
        <activity android:name="com.kfugosic.bakingapp.StepDetailsActivity"
            android:parentActivityName="com.kfugosic.bakingapp.RecipeDetailsActivity">
        </activity>
        <activity android:name="com.kfugosic.bakingapp.IngredientsActivity"
            android:parentActivityName="com.kfugosic.bakingapp.RecipeDetailsActivity">
        </activity>
    </application>

</manifest>